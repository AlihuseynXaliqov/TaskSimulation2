@model CreateMemberDto

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Member</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                <label asp-for="formFile">Image Url</label>
                <input class="form-control" placeholder="Enter ImgUrl" asp-for="formFile">
                <span asp-validation-for="formFile" style="color:red"></span>
        </div>
        <div class="form-group">
            <select asp-for="PositionId" class="form-control" asp-items=@(new SelectList(ViewBag.Position,"Id", "Name"))>
                <option>Select Position</option>
            </select>
        </div>
             

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>


</body>
</html>
