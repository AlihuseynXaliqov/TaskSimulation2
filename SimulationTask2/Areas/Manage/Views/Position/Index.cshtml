@model List<Position>
@{
	int count = 0;
}
<div class="container">
	<h1> Positions</h1>
	<a class="btn-btn-primary" asp-controller="Position" asp-action="Create">Create</a>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Id</th>
				<th scope="col">Name</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<th scope="row">@count</th>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>
						<a class="btn btn-primary" asp-action="Update" asp-route-Id="@item.Id">Update</a>
						<a class="btn btn-primary" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>


					</td>
				</tr>
				count++;
			}
		</tbody>
	</table>
</div>